{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr status:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue status:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh workflow list:*)",
      "Bash(gh api:* --method GET)",
      "Bash(gh auth status:*)",
      "Bash(gh status:*)"
    ],
    "deny": [
      "Read(~/.ssh/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.gnupg/**)",
      "Read(**/.env*)",
      "Bash(rm -rf:*)",
      "Bash(git add .)",
      "Bash(git add -A:*)",
      "Bash(git add --all:*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf .)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "hooks": [
    {
      "matcher": "Edit|Write",
      "condition": "$CLAUDE_FILE_PATHS =~ \\.py$",
      "hooks": [
        {
          "type": "command",
          "command": "if command -v mise >/dev/null 2>&1 && ([ -f .mise.toml ] || [ -f .mise.local.toml ]); then mise run lint 2>/dev/null || true; fi"
        }
      ]
    }
  ],
  "feedbackSurveyState": {
    "lastShownTime": 1754042613598
  }
}
