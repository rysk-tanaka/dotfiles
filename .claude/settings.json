{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "permissions": {
    "deny": [
      "Read(~/.ssh/**)",
      "Read(~/.aws/credentials)",
      "Read(~/.gnupg/**)",
      "Read(**/.env*)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0"
  },
  "hooks": [
    {
      "matcher": "Edit|Write",
      "condition": "$CLAUDE_FILE_PATHS =~ \\.py$",
      "hooks": [
        {
          "type": "command",
          "command": "if command -v mise >/dev/null 2>&1 && ([ -f .mise.toml ] || [ -f .mise.local.toml ]); then mise run lint 2>/dev/null || true; fi"
        }
      ]
    }
  ],
  "feedbackSurveyState": {
    "lastShownTime": 1754042613598
  }
}
