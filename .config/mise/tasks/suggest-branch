#!/usr/bin/env bash
#MISE description="Suggest branch name from current changes or work description"
#MISE dir="{{cwd}}"
#USAGE arg "[base_branch]" help="Base branch to compare against (default: main)"
#USAGE flag "--codex" help="Use Codex CLI instead of Claude Code"

set -euo pipefail

DOTFILES="${DOTFILES_PATH:-$(cd "$(dirname "$0")/../../.." && pwd)}"
USE_CODEX="${usage_codex:-false}"

if ! command -v jq &>/dev/null; then
    echo "Error: jq command not found. Run 'mise install' to install dependencies." >&2
    exit 1
fi

if [[ "$USE_CODEX" == "true" ]]; then
    if ! command -v codex &>/dev/null; then
        echo "Error: codex command not found" >&2
        exit 1
    fi
    SKILL_PATH="${DOTFILES}/.codex/skills/suggest-branch/SKILL.md"
else
    if ! command -v claude &>/dev/null; then
        echo "Error: claude command not found" >&2
        exit 1
    fi
    SKILL_PATH="${DOTFILES}/.claude/skills/suggest-branch/SKILL.md"
fi

if [[ ! -f "$SKILL_PATH" ]]; then
    echo "Error: SKILL.md not found at $SKILL_PATH" >&2
    exit 1
fi

BASE_BRANCH="${usage_base_branch:-main}"

# --- Collect git data ---

COLLECT_SCRIPT="${DOTFILES}/.claude/skills/suggest-branch/collect.sh"
if [[ ! -f "$COLLECT_SCRIPT" ]]; then
    echo "Error: collect.sh not found at $COLLECT_SCRIPT" >&2
    exit 1
fi

GIT_DATA=$(bash "$COLLECT_SCRIPT" "$BASE_BRANCH")

# --- Generate candidates via LLM ---

PROMPT="以下の git データを分析してブランチ名候補を生成してください。JSON のみを出力すること。

<git-data>
${GIT_DATA}
</git-data>"

if [[ "$USE_CODEX" == "true" ]]; then
    OUTFILE=$(mktemp)
    ERRFILE=$(mktemp)
    trap 'rm -f "$OUTFILE" "$ERRFILE"' EXIT
    CODEX_OK=false
    for attempt in 1 2; do
        if printf '%s\n\n%s' "$(cat "$SKILL_PATH")" "$PROMPT" | timeout 15 codex exec \
            --sandbox read-only \
            -m gpt-5.1-codex-mini \
            -o "$OUTFILE" \
            - >/dev/null 2>"$ERRFILE"; then
            CODEX_OK=true
            break
        fi
        echo "codex exec failed (attempt $attempt/2), retrying..." >&2
    done
    if [[ "$CODEX_OK" != "true" ]]; then
        echo "Error: codex exec failed after retries" >&2
        cat "$ERRFILE" >&2
        exit 1
    fi
    RESULT=$(cat "$OUTFILE")
else
    RESULT=$(printf '%s' "$PROMPT" | claude -p \
        --model haiku \
        --append-system-prompt "$(cat "$SKILL_PATH")")
fi

if [[ -z "$RESULT" ]]; then
    echo "Error: Failed to generate candidates" >&2
    exit 1
fi

# Extract JSON from LLM output (strip markdown fences, then parse with jq)
STRIPPED=$(echo "$RESULT" | sed '/^```/d')
if ! JSON=$(echo "$STRIPPED" | jq -e '.' 2>/dev/null); then
    # Fallback: show raw output if JSON parse fails
    echo "$RESULT"
    exit 0
fi

CURRENT_BRANCH=$(git branch --show-current)
COUNT=$(echo "$JSON" | jq '.candidates | length')

if [[ "$COUNT" -eq 0 ]]; then
    echo "候補が生成されませんでした。" >&2
    exit 1
fi

# --- Build selection menu ---

# Build parallel arrays: NAMES for raw values, LINES for display
# Use @base64 to safely handle newlines/special chars in JSON fields
NAMES=()
LINES=()
while IFS= read -r encoded; do
    name=$(echo "$encoded" | base64 -d | jq -r '.name')
    desc=$(echo "$encoded" | base64 -d | jq -r '.description')
    NAMES+=("$name")
    LINES+=("$name - $desc")
done < <(echo "$JSON" | jq -r '.candidates[] | @base64')

apply_branch_name() {
    local name="$1"
    if [[ "$name" == "$CURRENT_BRANCH" ]]; then
        echo "現在のブランチ名がそのまま適切です。"
        return
    fi

    local cmd
    if [[ -z "$CURRENT_BRANCH" || "$CURRENT_BRANCH" == "$BASE_BRANCH" ]]; then
        cmd=(switch -c)
    else
        # If current branch tracks a remote and has no local-only commits,
        # treat as shared base branch (e.g. main, develop, release)
        local upstream
        upstream=$(git rev-parse --abbrev-ref "@{upstream}" 2>/dev/null) || upstream=""
        if [[ -n "$upstream" ]] && \
           [[ $(git rev-list --count "$upstream..$CURRENT_BRANCH" 2>/dev/null) -eq 0 ]]; then
            cmd=(switch -c)
        else
            cmd=(branch -m)
        fi
    fi

    echo "git ${cmd[*]} $name"
    git "${cmd[@]}" "$name"
}

echo ""

if [[ ! -t 0 || ! -t 1 ]]; then
    # Non-interactive: list all candidates without execution
    for i in "${!LINES[@]}"; do
        echo "${LINES[$i]}"
    done
    exit 0
fi

BRANCH_NAME=""
if command -v fzf &>/dev/null; then
    SELECTED=$(printf '%s\n' "${LINES[@]}" | fzf --prompt="ブランチを選択> " --height=~10 --reverse) || exit 0
    if [[ -z "$SELECTED" ]]; then
        exit 0
    fi
    # Look up original name by matching display line
    for i in "${!LINES[@]}"; do
        if [[ "${LINES[$i]}" == "$SELECTED" ]]; then
            BRANCH_NAME="${NAMES[$i]}"
            break
        fi
    done
else
    echo "ブランチを選択してください。"
    echo ""
    SELECTED=""
    select SELECTED in "${LINES[@]}"; do
        if [[ -n "$SELECTED" ]]; then
            break
        fi
        echo "無効な選択です。もう一度選んでください。" >&2
    done
    if [[ -z "$SELECTED" ]]; then
        exit 0
    fi
    # REPLY is 1-based index from select
    BRANCH_NAME="${NAMES[$((REPLY - 1))]}"
fi

if [[ -z "$BRANCH_NAME" ]]; then
    exit 0
fi

echo ""
apply_branch_name "$BRANCH_NAME"
